/** app.wxss **/
page {
  background-color: #ffffff;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.container {
  padding: 40rpx;
}

.welcome-section {
  background: linear-gradient(135deg, #4361ee, #7209b7);
  color: white;
  border-radius: 24rpx;
  padding: 60rpx;
  margin-bottom: 60rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  opacity: 0.9;
}

.dashboard-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.dashboard-card {
  width: 30%;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-icon {
  width: 120rpx;
  height: 120rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
}

.card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.view-all {
  color: #4361ee;
  font-size: 28rpx;
}

.no-data {
  text-align: center;
  padding: 60rpx;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
}

/* 按钮样式 */
.button {
  width: 150rpx;
  text-align: center;
  height: 60rpx;
  color: white;
  border-radius: 5px;
  line-height: 60rpx;
  background-color: #07c160;
  margin-right: 10rpx;
}

.button:last-child {
  margin-right: 0;
}

/* 列表项样式 */
.list-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

/* 状态标签 */
.status-badge {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.status-pending {
  background-color: #fff7e6;
  color: #ff9a3c;
}

.status-completed {
  background-color: #e6fff4;
  color: #00b42a;
}

.status-canceled {
  background-color: #fff2f0;
  color: #ff4d4f;
}