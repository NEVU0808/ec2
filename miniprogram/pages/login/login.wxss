/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 60rpx;
  background-color: #f9f9f9;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 160rpx;
}

.logo {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.app-name {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
}

.login-btn-container {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  background-color: #07c160;
  border-radius: 60rpx;
  color: #fff;
  font-size: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.3);
  transition: background-color 0.2s ease-in-out;
}

.login-btn:hover {
  background-color: #05a852;
}

.wechat-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}

.policy-container {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}

.policy-link {
  color: #07c160;
  margin: 0 10rpx;
}