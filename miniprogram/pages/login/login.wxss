/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 60rpx;
  background-color: #f9f9f9;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 160rpx;
}

.logo {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.app-name {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
}

.input-container {
  width: 100%;
  margin-bottom: 40rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.input-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.input-wrapper input {
  flex: 1;
  height: 100rpx;
}

.button-container {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.login-btn,
.register-btn {
  width: 48%;
  height: 120rpx;
  background-color: #0742c1;
  border-radius: 60rpx;
  color: #fff;
  font-size: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.3);
  transition: background-color 0.2s ease-in-out;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:hover,
.register-btn:hover {
  background-color: #05a852;
}

.wechat-login-container {
  width: 100%;
  margin-bottom: 60rpx;
}

.wechat-login-btn {
  width: 100%;
  height: 120rpx;
  background-color: #09bb07;
  border-radius: 60rpx;
  color: #fff;
  font-size: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(9, 187, 7, 0.3);
  transition: background-color 0.2s ease-in-out;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn:hover {
  background-color: #053da4;
}

.wechat-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}

.policy-container {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}

.policy-link {
  color: #07c160;
  margin: 0 10rpx;
}