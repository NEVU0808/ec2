/* pages/withdraw-record/withdraw-record.wxss */
.container {
  padding: 40rpx;
}

.welcome-section {
  background: linear-gradient(135deg, #4361ee, #7209b7);
  color: white;
  border-radius: 24rpx;
  padding: 60rpx;
  margin-bottom: 60rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  opacity: 0.9;
}

.dashboard-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.dashboard-card {
  width: 30%;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-icon {
  width: 120rpx;
  height: 120rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
}

.card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
}

.view-all {
  color: #4361ee;
  font-size: 28rpx;
}

.order-list {
  margin-top: 40rpx;
}

.no-data {
  text-align: center;
  padding: 60rpx;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
}